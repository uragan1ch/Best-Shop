{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "build": "echo \"Dummy build script required for Autocode Compile\"",
  "license": "ISC",
  "author": "Daniil Repa",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run build:sass -- --watch --poll\" \"live-server . --open=src/index.html\"",
    "build": "npm run lint && npm run build:sass",
    "build:sass": "sass src/scss/main.scss:dist/css/style.css src/scss/layouts/header.scss:dist/css/header.css src/scss/layouts/footer.scss:dist/css/footer.css",
    "lint:js": "eslint . --ext .js",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "lint": "npm run lint:js && npm run lint:scss"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "live-server": "^1.2.2",
    "sass": "^1.94.2",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0"
  }
}
